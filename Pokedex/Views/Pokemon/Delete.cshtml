@model Application.ViewModels.SavePokemonViewModel
@{
    ViewData["Title"] = "Eliminar Pokemón";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>¿Está seguro de que desea eliminar el Pokemón @Model.Name?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Pokemon" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id"/>

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Pokemon" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            
            </div>
        </div>
        
    </div>

</div>