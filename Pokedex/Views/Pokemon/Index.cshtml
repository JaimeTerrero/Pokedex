@model List<Application.ViewModels.PokemonViewModel>
@{
    ViewData["Title"] = "Pokémones";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Pokemon" asp-action="Create" class="btn btn-outline-success">Crear nuevo producto</a>
        </div>
    </div>

    <div class="row">

        @if(Model == null || Model.Count == 0){
            <h2>No hay Pokémones aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.PokemonViewModel item in Model)
            {
                <div class="col-4">
                  <div class="card shadow-sm">

                    <img class="bd-placeholder-img card-img-top img-pokemon-size" src="@item.ImageUrl" />

                    <div class="card-body">
                        <h4>@item.Name</h4>
                        <div>
                            <small class="fw-bold fs-6">Región: @item.RegionName</small>
                        </div>
                        <div>
                            <small class="fw-bold fs-6 d-block">Tipo Primario: @item.TipoPrimario</small>
                            <small class="fw-bold fs-6">Tipo Secundario: @item.TipoSecundario</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
            }
        }
                        
     </div>
</div>