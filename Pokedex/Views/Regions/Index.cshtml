@model List<Application.ViewModels.RegionViewModel>
@{
    ViewData["Title"] = "Regiones";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Regions" asp-action="Create" class="btn btn-outline-success">Crear nueva región</a>
        </div>
    </div>

    <div class="row">

        @if(Model == null || Model.Count == 0){
            <h2>No hay Regiones aún</h2>
        }
        else
        {
            @foreach (Application.ViewModels.RegionViewModel item in Model)
            {
                <div class="col-4">
                  <div class="card shadow-sm">

                    <div class="card-body">
                        <h4>@item.Name</h4>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                <a asp-controller="Regions" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
            }
        }
     </div>
</div>